@model alkemyChallengeCSharp.Models.Profesor

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Datos de @Model.NombreYApellido</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.Apellido)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Apellido)
                    </dd>
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.Dni)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Dni)
                    </dd>
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.Activo)
                    </dt>
                    <dd class="col-sm-10">
                        @if (Model.Activo)
                        {
                            <span>Si</span>
                        }
                        else
                        {
                            <span>No</span>
                        }

                    </dd>
                </dl>
            </div>
            <hr />
            <div class="form-group mx-auto">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
                    Editar
                </a>
                <a asp-action="Index" class="btn btn-danger">
                    Volver
                </a>
            </div>
        </div>
    </div>
</div>
