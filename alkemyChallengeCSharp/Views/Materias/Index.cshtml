@model IEnumerable<alkemyChallengeCSharp.Models.Materia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Crear Materia</a>
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxAlumnos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Horario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profesor.NombreYApellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxAlumnos)
                </td>
                <td>
                    <a class="btn btn-outline-warning btn-sm ml-1" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-outline-success btn-sm ml-1" asp-action="Details" asp-route-id="@item.Id">Ver detalles</a>
                    <a class="btn btn-outline-danger btn-sm ml-1" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
